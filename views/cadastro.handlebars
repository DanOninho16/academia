<div class="container-fluid fora">
    <div id="divdentro" class="container divdentro">
      <form class="form-inline" method="get" id="formtreino" action="/registro">
      <div class="alert alert-success" id="success" style="display: none;"></div>
      <div class="alert alert-danger" id="error" style="display: none;"></div>
        <div id="box" class="form-group">
          <label class="" for="data-exercicio">Quando foi o treino?</label>
          <input
            type="datetime-local"
            name="data-exercicio"
            id="data-exercicio"
            class="form-control"
            value="2017-06-01T08:30"
          />
          <div
            class="row gx-1 text-center justify-content-center align-items-center my-2"
          >
            <div class="form-group col-xs-50 col-auto">
              <label for="exercicio">Exercício</label>
              <select name="exercício" class="form-control" id="exercicio">
                {{#each exercicios}}
                  <option
                    class=""
                    value="{{idexercicio}}"
                  >{{nomeexercicio}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group col-xs-50 col-auto">
              <label for="series">Séries</label>
              <input type="number" class="form-control" name="Séries" id="series" required/>
            </div>
            <div class="form-group col-xs-50 col-auto">
              <label for="repeticoes">Repetições</label>
              <input
                type="number"
                class="form-control"
                name="Repetições"
                id="repeticoes"
                required
              />
            </div>
            <div class="form-group col-xs-50 col-auto">
              <label for="carga">Carga</label>
              <input type="number" class="form-control" name="Carga" id="carga" placeholder="KG" />
            </div>
            <div class="form-group col-xs-50 col-auto">
              <button
                class="btn btn-sm align-middle"
                id="remover"
                type="button"
                style="visibility:hidden;"
              ><svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  fill="currentColor"
                  class="bi text-danger bi-dash-circle-fill"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h7a.5.5 0 0 0 0-1z"
                  >
                  </path>
                </svg></button>
            </div>
          </div>
    
        </div>
        <button type="button" id="add" class="btn" style=""><svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            fill="currentColor"
            class="bi text-success bi-plus-circle-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3z"
            />
          </svg></button>
      </form>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button
          type="submit"
          form="formtreino"
          id="finish"
          class="btn btn-success me-md-2 justify-content-md-end"
        >Registrar treino</button>
      </div>
    </div>
</div>

<script src="java/newproduct.js"></script>